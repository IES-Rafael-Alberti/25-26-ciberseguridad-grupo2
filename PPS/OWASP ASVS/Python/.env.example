# JWT Configuration (REQUIRED - Generate with: openssl rand -base64 48)
JWT_SECRET_KEY=CAMBIA_POR_UNA_CLAVE_SECRETA_MUY_LARGA_Y_SEGURA_MINIMO_48_CARACTERES

# FastAPI
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Password policy
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128

# GitHub OAuth
GITHUB_CLIENT_ID=YOUR_GITHUB_CLIENT_ID
GITHUB_CLIENT_SECRET=YOUR_GITHUB_CLIENT_SECRET

# OAuth hardening
OAUTH_STATE_TTL_SECONDS=300
OAUTH_REQUEST_TIMEOUT_SECONDS=10
OAUTH_COOKIE_SECURE=false

# .NET (opcional; sobrescribe si est√° definido)
# Jwt__Key=MISMA_CLAVE_QUE_JWT_SECRET_KEY
# Jwt__Issuer=UsuariosApi
# Jwt__Audience=UsuariosApiClient
# Jwt__ExpiresMinutes=60

# Database (opcional, si usas otra BD)
# DatabaseConnection=Server=localhost;Database=usuarios;User Id=sa;Password=YourPassword;

# Logging
# ASPNETCORE_ENVIRONMENT=Development

# Security logging
SECURITY_LOG_PATH=./logs/security.log