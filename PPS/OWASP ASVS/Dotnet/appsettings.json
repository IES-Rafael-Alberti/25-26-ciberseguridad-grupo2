{
  "ConnectionStrings": {
    "UsuariosDb": "Data Source=usuarios.db"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:8000"
      }
    },
    "AllowedHosts": "*"
  },
  "Jwt": {
    "Key": "CHANGE_ME_USE_ENV_JWT_KEY",
    "Issuer": "UsuariosApi",
    "Audience": "UsuariosApiClient",
    "ExpiresMinutes": 60
  },
  "GitHub": {
    "RedirectUri": "http://localhost:8000/api/auth/github/callback",
    "ReturnUrl": "http://localhost:8000",
    "HttpTimeoutSeconds": 10
  },
  "Cors": {
    "AllowedOrigins": "https://localhost:3000,https://yourdomain.com,http://localhost:8000"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [],
    "EndpointWhitelist": [],
    "ClientWhitelist": [],
    "GeneralRules": [
      {
        "Endpoint": "post:/api/usuarios/login",
        "Period": "1m",
        "Limit": 3
      },
      {
        "Endpoint": "post:/api/usuarios",
        "Period": "1h",
        "Limit": 10
      },
      {
        "Endpoint": "*:/api/usuarios",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*:/api/auth/github/login",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "*:/api/auth/github/callback",
        "Period": "1m",
        "Limit": 10
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "UsuariosApi.Controllers": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Security": {
    "EnableHSTS": true,
    "EnableHttpsRedirection": true
  }
}
